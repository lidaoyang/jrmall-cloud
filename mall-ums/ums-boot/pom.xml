        </dependency>

        <dependency>
            <groupId>com.jrmall.cloud</groupId>
            <artifactId>common-redis</artifactId>
        </dependency>

        <dependency>
            <groupId>com.jrmall.cloud</groupId>
            <artifactId>common-security</artifactId>
        </dependency>

        <dependency>
            <groupId>com.jrmall.cloud</groupId>
            <artifactId>common-seata</artifactId>
        </dependency>

        <dependency>
