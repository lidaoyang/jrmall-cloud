    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>ums-boot</artifactId>
    <description>会员服务模块</description>

    <dependencies>

        <dependency>
            <groupId>com.jrmall.cloud</groupId>
            <artifactId>ums-api</artifactId>
        </dependency>

        <dependency>
            <groupId>com.jrmall.cloud</groupId>
            <artifactId>common-job</artifactId>
        </dependency>

        <dependency>
